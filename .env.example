# Database connection - Global database (used in runtime)
DATABASE_URL="postgresql://postgres:changeme@localhost:5432/globaldb?schema=public"

# Project database URL template (ONLY for Prisma CLI: generate/migrate - NOT used in runtime)
# On production, this variable is not needed - application builds URLs dynamically
PROJECT_DATABASE_URL="postgresql://postgres:changeme@localhost:5432/project_default?schema=public"

# Database connection template for dynamic project databases
# Format: protocol://user:password@host:port/database_prefix
# Application will append project namespace: {DB_BASE_URL}{namespace}
DB_HOST="localhost"
DB_PORT="5432"
DB_USER="postgres"
DB_PASSWORD="changeme"
DB_PROJECT_PREFIX="project_"

# Konfiguracja Google OAuth
# Pobierz z: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
# For production with SSL, use: https://yourdomain.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:4200/api/auth/google/callback
# For production with SSL, use: https://yourdomain.com
GOOGLE_AUTH_REDIRECT=http://localhost:3000/dashboard

# Konfiguracja JWT
# Wygeneruj silne hasła używając: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# OAuth encryption key (min 32 znaki)
OAUTH_ENCRYPTION_KEY=your-oauth-encryption-key-32-chars

# CORS Configuration
# For development: http://localhost:3000
# For production with SSL: https://yourdomain.com
# Multiple origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Port serwera
PORT=4200

# Environment
NODE_ENV=development

# Email Configuration
# EMAIL_PROVIDER: Choose 'smtp' or 'resend'
# - smtp: Traditional SMTP (Gmail, SendGrid, etc.)
# - resend: Resend API (https://resend.com) - 100 emails/day free
EMAIL_PROVIDER=smtp

# Resend Configuration (if EMAIL_PROVIDER=resend)
# Get API key from: https://resend.com/api-keys
# Free tier: 100 emails/day, can only send to your own email in test mode
# Production: Verify domain at https://resend.com/domains
RESEND_API_KEY=re_YourResendAPIKey

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
# For Gmail: Requires App Password (https://myaccount.google.com/apppasswords)
# - Must enable 2FA first
# - Generate 16-character app password
# - Use SMTP_SECURE="0" for STARTTLS (port 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=0
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_FROM="POTask Manager" <your-email@gmail.com>
